<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".DeviceActivity"

    >

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/ListView">

        </ListView>


    <TextView android:text="@string/textView_path" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_path"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView android:text="@string/textView_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_name"
        android:layout_below="@+id/textView_path"
        android:layout_alignRight="@+id/textView_path"
        android:layout_alignEnd="@+id/textView_path"
        android:visibility="gone"/>

    <TextView android:text="@string/textView_description" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_description"
        android:layout_below="@+id/textView_name"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <Switch
        android:layout_width="40pt"
        android:layout_height="15pt"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:id="@+id/switch_value" />

    <SeekBar
        android:layout_width="100pt"
        android:layout_height="50pt"
        android:visibility="gone"
        android:id="@+id/seekBar_value"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
/>
    <EditText
        android:layout_width="100pt"
        android:layout_height="50pt"
        android:id="@+id/editText_value"
        android:visibility="gone"
        android:layout_above="@+id/seekBar_value"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
